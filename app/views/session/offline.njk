{% extends "_layouts/form.njk" %}

{% set title = __("session.offline.title") %}
{% set confirmButtonText = __("session.offline.confirm") %}
{% set formAction = "/downloads/new" %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [{
      text: __("home.show.title"),
      href: "/"
    }, {
      text: __("session.list.title"),
      href: "/sessions"
    }, {
      text: session.location.name,
      href: session.uri
    }]
  }) }}
{% endblock %}

{% block form %}
  {{ appHeading({
    title: title
  }) }}

  {{ __("session.offline.description") | nhsukMarkdown }}

  {% call fieldset({
    legend: {
      html: appHeading({
        classes: "nhsuk-fieldset__legend--m",
        title: __("session.offline.vaccinator.label")
      })
    }
  }) %}
    {{ input({
      classes: "nhsuk-input--width-20",
      label: { text: __("session.offline.vaccinator.firstName") },
      decorate: "firstName",
      value: account.firstName
    }) }}

    {{ input({
      classes: "nhsuk-input--width-20",
      label: { text: __("session.offline.vaccinator.lastName") },
      decorate: "lastName",
      value: account.lastName
    }) }}

    {{ input({
      type: "hidden",
      decorate: "download.session_id",
      value: session.id
    }) }}

    {{ input({
      type: "hidden",
      decorate: "download.type",
      value: DownloadType.Session
    }) }}
  {% endcall %}
{% endblock %}
